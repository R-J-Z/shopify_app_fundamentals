<div class='d-flex flex-column' id='main-content-container'>
    <div class='d-flex justify-content-center align-items-center margin-vertical flex-column'>
        <h1>Email Sender Pro</h1>
        <h3 class='mv-0'>(Shopify app fundamentals)</h3>
    </div>
    <hr>
    <div class='d-flex margin-vertical'>
        <div class='d-flex align-items-center flex-column flex-1'>

            <div class='d-flex flex-column'>
                <div class='d-flex justify-content-between'>
                    <button id="send-email-button">Send email</button>
                    
                </div>
                <div class='d-flex flex-column align-items-center margin-vertical'>
                    <span>Emails sent:</span>
                    <span>Free tier remaining:</span>
                </div>
            </div>    
        </div>

        <div id='billing-controller-display' class='d-flex flex-column align-items-center flex-1'>
            <h3> Current Plan </h3>
            <div class='d-flex align-items-center flex-column' id="current-plan">
                <!-- DISPLAY CURRENT PLAN HERE -->
            </div>
        </div>
    </div>
    <hr>
    <div class='margin-vertical'>
        <h3> Upgrade plan</h3>
        <div class='d-flex align-items-center justify-content-center' id='plans-display'>    
            <%@plans.each do |plan|%>
                <button class='plan-card flex-1' id="<%=plan.name%>">
                    <div class="Polaris-Card">
                        <div class="Polaris-Card__Header">
                            <h2 class="Polaris-Heading"><%=plan.display_name%></h2>
                        </div>
                        <div class="Polaris-Card__Section">
                            <div>$<%=plan.cost_monthly%>/month</div>
                            <p><%=plan.description%></p>
                        </div>
                    </div>

                    <div id="PolarisPortalsContainer">
                    </div>
                </button>
            <%end%>
        </div>
    </div>
</div>


<%= content_tag :div, style:"display:none", id: "url-data", data: {api_key: @api_key, shop_origin: @shop_origin} do%>
<% end %>
